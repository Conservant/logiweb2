<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN" "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">
<tiles-definitions>
    <definition name="baseLayout" template="/WEB-INF/jsp/layout/layout.jsp">
        <put-attribute name="title" value="Грузоперевозки 2.0"/>
        <put-attribute name="header" value="/WEB-INF/jsp/layout/header.jsp"/>
        <put-attribute name="content" value=""/>
        <put-attribute name="footer" value="/WEB-INF/jsp/layout/footer.jsp"/>
    </definition>

    <definition name="index" extends="baseLayout">
        <put-attribute name="content" value="/WEB-INF/jsp/index.jsp"/>
        <put-attribute name="current" value="index"/>
    </definition>

    <definition name="trucks" extends="baseLayout">
        <put-attribute name="title" value="Грузовики"/>
        <put-attribute name="content" value="/WEB-INF/jsp/Manager/trucks.jsp"/>
        <put-attribute name="current" value="trucks"/>
    </definition>

    <definition name="drivers" extends="baseLayout">
        <put-attribute name="title" value="Водители"/>
        <put-attribute name="content" value="/WEB-INF/jsp/Manager/drivers.jsp"/>
        <put-attribute name="current" value="drivers"/>
    </definition>

    <definition name="orders" extends="baseLayout">
        <put-attribute name="title" value="Заказы"/>
        <put-attribute name="content" value="/WEB-INF/jsp/Manager/orders.jsp"/>
        <put-attribute name="current" value="orders"/>
    </definition>

    <definition name="orderDetail" extends="baseLayout">
        <put-attribute name="title" value="Информация о заказе"/>
        <put-attribute name="content" value="/WEB-INF/jsp/Manager/orderDetail.jsp"/>
        <put-attribute name="current" value=""/>
    </definition>
    
    <definition name="newDriver" extends="baseLayout">
        <put-attribute name="title" value="Новый водитель"/>
        <put-attribute name="content" value="/WEB-INF/jsp/Manager/newDriver.jsp"/>
        <put-attribute name="current" value="drivers"/>
    </definition>

    <definition name="newTruck" extends="baseLayout">
        <put-attribute name="title" value="Новый грузовик"/>
        <put-attribute name="content" value="/WEB-INF/jsp/Manager/newTruck.jsp"/>
        <put-attribute name="current" value=""/>
    </definition>

    <definition name="login" extends="baseLayout">
        <put-attribute name="current" value="login"/>
        <put-attribute name="content" value="/WEB-INF/jsp/login.jsp"/>
        <put-attribute name="title" value="login"/>
    </definition>

</tiles-definitions>
